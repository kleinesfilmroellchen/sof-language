# SOF test file - control flow tests

"incorrect"
{ "correct" } true if
"correct" = assert

"correct"
{ "incorrect" } false if
"correct" = assert

{ true assert } true
{ false assert } ifelse

{ false assert } false
{ true assert } ifelse

# 0 i def
# 0 { i . 3 + i def } { 1 + dup 10 <= } while
# i . 30 = assert

0 { 1 + } { dup 10 < } while
10 = assert

0 { 1 + } { dup 10 < } dowhile
10 = assert

# a false condition should not execute the while body
0 { false assert } { false } while
# ...which is not the case with do-while
false { true } { false } dowhile assert

switch:: {
	false assert
} { false }
{
	true assert
} { true }
{
	false assert
} switch

switch:: {
	false assert
} { false }
{
	false assert
} { false }
{
	true assert
} switch

